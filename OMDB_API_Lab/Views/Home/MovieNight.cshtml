@model List<MovieModel>


<form asp-method="post" asp-action="MovieNightResults">
    <p>Enter Movie title:</p>
    <input type="text" name="title1" />
    <p>Enter Movie title:</p>
    <input type="text" name="title2" />
    <p>Enter Movie title:</p>
    <input type="text" name="title3" />
    <input type="submit" />
</form>


@{
    if (Model != null)
    {
        foreach (MovieModel m in Model)
        {
            <h1>@m.Title</h1>
            <img src="@m.Poster" />
            <p>Genre: @m.Genre</p>
            <p>Rating: @m.imdbRating</p>
            <p>Actors: @m.Actors</p>
        }
    }
}